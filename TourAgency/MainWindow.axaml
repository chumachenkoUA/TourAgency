<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TourAgency.MainWindow"
        Width="800" Height="600"
        Title="Tour Agency"
        RequestedThemeVariant="Light">
  <StackPanel Margin="10" Spacing="8">
    <TextBlock Text="Додавання нового туру" FontWeight="Bold" FontSize="18"/>
    <StackPanel Orientation="Horizontal" Spacing="6">
      <TextBox x:Name="TourNameInput" Width="120" Watermark="Назва туру"/>
      <TextBox x:Name="CountryInput" Width="100" Watermark="Країна"/>
      <DatePicker x:Name="DepartureDateInput" Width="110"/>
      <TextBox x:Name="DaysInput" Width="55" Watermark="Днів"/>
      <TextBox x:Name="CostInput" Width="70" Watermark="Вартість"/>
      <CheckBox x:Name="NightTransfersInput" Content="Нічні переїзди"/>
      <Button Content="Додати тур" Click="AddTour_Click" Width="100"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="6">
      <Button Content="Переглянути всі тури" Click="ViewAllTours_Click" Width="140"/>
      <Button Content="Фільтрувати (Чехія, без нічних)" Click="FilterTours_Click" Width="170"/>
    </StackPanel>

    <TextBlock Text="Тури (таблиця)" FontWeight="Bold" Margin="0,8,0,0"/>
    <DataGrid x:Name="ToursDataGrid" AutoGenerateColumns="True" Height="180" Margin="0,0,0,8"/>

    <TextBlock Text="Тури (текстовий вигляд)" FontWeight="Bold"/>
    <ScrollViewer Height="180" Margin="0,0,0,8" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
      <TextBox Name="ToursTextBox"
               AcceptsReturn="True"
               IsReadOnly="True"
               FontFamily="Consolas"
               FontSize="14"
               HorizontalAlignment="Stretch"/>
    </ScrollViewer>
  </StackPanel>
</Window>